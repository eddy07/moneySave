<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="180dp"
    android:layout_width="300dp">

        <LinearLayout
            android:id="@+id/form"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Retrouver mon mot de passe"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/evernote_button_bkg"
                android:textSize="18dp"
                />

            <com.pnikosis.materialishprogress.ProgressWheel
                android:id="@+id/progress_wheel"
                android:visibility="gone"
                android:layout_marginTop="-8dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                wheel:matProg_barColor="@color/app_color_light"
                wheel:matProg_progressIndeterminate="true" />
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Entrer votre email "
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:textColor="@color/app_color"
                android:textColorHint="@color/gris_background"
                android:layout_marginRight="10dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/text_layout_style"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/sendBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Valider"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:background="@drawable/valider"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="bottom|right"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/formresult"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retrouver mon mot de passe"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/evernote_button_bkg"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vous allez reçevoir un mail de confirmation. Connectez-vous à votre compte de messagerie et réinitialiser votre mot de passe idjangui!"
            android:layout_marginTop="0dp"
            android:padding="10dp"
            android:textColor="@color/app_color"
            android:textColorHint="@color/gris_background"
            android:layout_marginRight="0dp"
            android:background="@drawable/text_layout_style"
            android:layout_marginLeft="0dp"/>
        <Button
            android:id="@+id/okBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:textColor="@color/app_color"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom|right"/>
    </LinearLayout>

</RelativeLayout>