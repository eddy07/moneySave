<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/image_header"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:src="@drawable/profile1"
        android:scaleType="center"
        android:background="@color/app_color"/>
        <LinearLayout
            android:id="@+id/blockName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/frame">
            <TextView
                android:id="@+id/labelNom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom"
                android:textStyle="bold"
                android:textSize="15dp"
                android:padding="15dp"
                android:textColor="@color/app_color"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="0.1dp"
                android:background="@color/evernote_button_pressed">

            </View>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
            <EditText
                android:id="@+id/editNom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/evernote_footer_text"
                android:textSize="17dp"
                android:layout_marginRight="60dp"
                android:hint="Tchousse eddy"
                android:padding="15dp"
                android:background="@color/white"/>
                <View
                    android:layout_width="0.3dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="70dp"
                    android:layout_gravity="right|center"
                    android:gravity="right"
                    android:background="@color/gris_background"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:gravity="right"
                    android:background="@color/white"
                    android:layout_marginRight="20dp"
                    />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/blockTel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/frame">
            <TextView
                android:id="@+id/labelTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tel"
                android:textStyle="bold"
                android:textSize="15dp"
                android:padding="15dp"
                android:textColor="@color/app_color"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="0.1dp"
                android:background="@color/evernote_button_pressed">

            </View>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/editTel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/evernote_footer_text"
                    android:textSize="17dp"
                    android:layout_marginRight="60dp"
                    android:hint="+ 237 678-01-88-12"
                    android:padding="15dp"
                    android:background="@color/white"/>
                <View
                    android:layout_width="0.3dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="70dp"
                    android:layout_gravity="right|center"
                    android:gravity="right"
                    android:background="@color/gris_background"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/blockProfession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/frame">
            <TextView
                android:id="@+id/labelProfession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profession"
                android:textStyle="bold"
                android:textSize="15dp"
                android:padding="15dp"
                android:textColor="@color/app_color"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="0.1dp"
                android:background="@color/evernote_button_pressed">

            </View>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/editProfession"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/evernote_footer_text"
                    android:textSize="17dp"
                    android:layout_marginRight="60dp"
                    android:hint="Developpeur"
                    android:padding="15dp"
                    android:background="@color/white"/>
                <View
                    android:layout_width="0.3dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="70dp"
                    android:layout_gravity="right|center"
                    android:gravity="right"
                    android:background="@color/gris_background"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>