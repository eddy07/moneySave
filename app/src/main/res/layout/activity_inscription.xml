<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginTop="?android:actionBarSize"
    tools:context="com.parse.app.InscriptionActivity">

    <View
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/gris_background"/>
    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress_wheel"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        wheel:matProg_barColor="#90454567"
        wheel:matProg_progressIndeterminate="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom: "
        android:textSize="18dp"
        android:layout_marginTop="25dp"
        android:padding="20dp"/>
    <TextView
        android:id="@+id/nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TCHOUSSE LONKENG"
        android:layout_marginLeft="50dp"
        android:textSize="18dp"
        android:layout_marginTop="25dp"
        android:textAllCaps="true"
        android:padding="20dp"/>
    <View
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/gris_background"/>
    <TextView
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prenom: "
        android:textSize="18dp"
        android:padding="20dp"/>
    <TextView
        android:id="@+id/prenom"
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eddy joel"
        android:textSize="18dp"
        android:layout_marginLeft="80dp"
        android:padding="20dp"/>
    <View
        android:layout_marginTop="155dp"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/gris_background"/>
    <TextView
        android:layout_marginTop="155dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Age: "
        android:textSize="18dp"
        android:padding="20dp"/>
    <TextView
        android:id="@+id/age"
        android:layout_marginTop="155dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="18 - 20"
        android:layout_marginLeft="50dp"
        android:textSize="18dp"
        android:padding="20dp"/>
    <View
        android:layout_marginTop="220dp"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/gris_background"/>
    <TextView
        android:layout_marginTop="220dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profession: "
        android:textSize="18dp"
        android:padding="20dp"/>
    <TextView
        android:id="@+id/profession"
        android:layout_marginTop="220dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingenieur SI"
        android:layout_marginLeft="100dp"
        android:textSize="18dp"
        android:padding="20dp"/>
    <View
        android:layout_marginTop="285dp"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/gris_background"/>



    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:stretchColumns="0,1"
        android:layout_gravity="bottom">
        <TableRow android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <Button
                android:id="@+id/acceptBtn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_button_good"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:text="Accepter" />

            <Button
                android:id="@+id/declineBtn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_bad"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="@android:color/white"
                android:textStyle="normal"
                android:text="Decliner" />

        </TableRow>
    </TableLayout>

</FrameLayout>
