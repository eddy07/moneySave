<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.parse.app.UpdateProfileActivity"
    android:id="@+id/setup_step1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="@drawable/framelog"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:textStyle="bold"
                android:textColor="@color/evernote_footer_text"
                android:textSize="16dp"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/gris_background"
                android:textColor="@color/evernote_footer_text"
                android:hint="username"
                android:paddingLeft="10dp"
                android:background="@color/white"
                android:inputType="textEmailAddress"
                android:layout_margin="5dp"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email :"
                android:textColor="@color/evernote_footer_text"
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/gris_background"
                android:textColor="@color/evernote_footer_text"
                android:hint="username@domain"
                android:background="@color/white"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:inputType="textEmailAddress"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telephone :"
                android:textColor="@color/evernote_footer_text"
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:textColor="@color/evernote_footer_text"
                android:maxLength="9"
                android:textColorHint="@color/gris_background"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:hint="6 xx xx xx xx"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:textColor="@color/evernote_footer_text"
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:textColor="@color/evernote_footer_text"
                android:maxLength="10"
                android:textColorHint="@color/gris_background"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:hint="**********"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password:"
                android:textColor="@color/evernote_footer_text"
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/newpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:textColor="@color/evernote_footer_text"
                android:maxLength="10"
                android:textColorHint="@color/gris_background"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:hint="**********"/>

            <Button
                android:id="@+id/registerBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_login"
                android:textColor="@color/white"
                android:text="Update"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
