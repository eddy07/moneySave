<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.save.app.LoginActivity"
    android:id="@+id/setup_step1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_blue_grey_800"
    android:orientation="vertical">
<ScrollView
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:visibility="visible">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/wel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Bienvenue sur idjangui !"
            android:layout_marginBottom="20dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_log"
            android:layout_marginLeft="40dp"
            android:textAllCaps="false"
            android:textColor="@color/gris_background"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:text="Facebook"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_log"
            android:layout_marginLeft="40dp"
            android:textAllCaps="false"
            android:textColor="@color/gris_background"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:text="Google"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:orientation="vertical">

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@color/gris"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:layout_marginTop="-12dp"
                android:background="@color/material_blue_grey_800"
                android:text="ou"
                android:textSize="16dp"/>


        </LinearLayout>
        <com.parse.app.view.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp">
            <EditText
            android:id="@+id/username"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:ems="10"
            android:gravity="top"
            android:hint="Login"
            android:inputType="textPersonName"
            android:lines="5"
            android:maxLength="600"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingEnd="12dp"
            android:textColor="@color/white"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:textColorHint="@color/white"
            android:textSize="18sp"/>
        </com.parse.app.view.FloatLabeledEditText>
        <View
            android:layout_marginTop="-20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/material_blue_grey_800"/>
        <View
            android:layout_marginTop="-10dp"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/white"/>
        <com.parse.app.view.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp">
        <EditText
            android:id="@+id/password"
            android:layout_marginTop="30dp"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:ems="10"
            android:gravity="top"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:lines="5"
            android:maxLength="600"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingEnd="12dp"
            android:textColor="@color/white"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:textColorHint="@color/white"
            android:textSize="18sp" />
        </com.parse.app.view.FloatLabeledEditText>
        <View
            android:layout_marginTop="-20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/material_blue_grey_800"/>
        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_log1"
            android:layout_marginLeft="40dp"
            android:textAllCaps="false"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="40dp"
            android:text="Connexion"/>
        <TextView
            android:id="@+id/pswforget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_click"
            android:text="Mot de passe oublie ?"
            android:clickable="true"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

</ScrollView>
    <LinearLayout
        android:id="@+id/bloc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#10000000"
        android:layout_gravity="center"
        android:visibility="gone"
        android:gravity="center">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="180dp"
         android:orientation="vertical"
         android:background="@drawable/framepop"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Retrouver mon mot de passe"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_marginTop="10dp"
             android:padding="10dp"
             android:textColor="@color/evernote_button_bkg"
             android:textSize="18dp"
             />


         <EditText
             android:id="@+id/email"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Entrer votre email "
             android:layout_marginTop="20dp"
             android:padding="10dp"
             android:textColor="@color/app_color"
             android:textColorHint="@color/gris_background"
             android:layout_marginRight="10dp"
             android:inputType="textEmailAddress"
             android:background="@drawable/text_layout_style"
             android:layout_marginLeft="10dp"/>
         <Button
             android:id="@+id/sendBtn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Valider"
             android:textColor="@color/app_color"
             android:background="@color/white"
             android:textSize="16dp"
             android:layout_marginTop="20dp"
             android:layout_marginRight="10dp"
             android:layout_gravity="bottom|right"/>
     </LinearLayout>
    </LinearLayout>
</LinearLayout>
