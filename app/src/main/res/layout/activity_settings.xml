<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="60dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.parse.app.SettingsActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemProfile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_settings"
            android:textSize="18sp"
            android:text="Profile"
            android:padding="15dp"/>

        <View android:layout_width="fill_parent"
            android:layout_height="0.75dip"
            android:background="@color/gris_background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/itemHelp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_settings"
            android:textSize="18sp"
            android:text="Aide"
            android:padding="15dp"/>
        </LinearLayout>
        <View android:layout_width="fill_parent"
            android:layout_height="0.75dip"
            android:background="@color/gris_background"/>


        <TextView
            android:id="@+id/itemFeedback"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_settings"
            android:textSize="18sp"
            android:text="Nous contacter"
            android:padding="15dp"/>

        <View android:layout_width="fill_parent"
            android:layout_height="0.75dip"
            android:background="@color/gris_background"/>

        <!--<TextView
            android:id="@+id/itemContacts"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_settings"
            android:textSize="18sp"
            android:text="Sign out"
            android:padding="15dp"/>

        <View android:layout_width="fill_parent"
            android:layout_height="0.75dip"
            android:background="@color/gris_background"/>-->

    </LinearLayout>

</RelativeLayout>
