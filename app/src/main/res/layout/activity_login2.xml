<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.parse.app.LoginActivity"
    android:id="@+id/setup_step1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@drawable/framelog"
        android:orientation="vertical">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Email :"
             android:textColor="@color/app_color"
             android:textSize="13dp"
             android:padding="10dp"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/evernote_button_pressed"
            android:textColor="@color/evernote_footer_text"
            android:hint="username@domain"
            android:inputType="textEmailAddress"
            android:background="@drawable/message_field"
            android:padding="10dp"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numéro de Téléphone :"
            android:textColor="@color/app_color"
            android:textSize="13dp"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/message_field"
            android:textSize="18dp"
            android:textColor="@color/evernote_footer_text"
            android:maxLength="9"
            android:textColorHint="@color/evernote_button_pressed"
            android:inputType="number"
            android:padding="10dp"
            android:hint="6 xx xx xx xx"/>
        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_login"
            android:textColor="@color/white"
            android:text="Login"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textAllCaps="false"/>
    </LinearLayout>
    </LinearLayout>
