<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_container_broadcast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    android:background="@drawable/background"
    tools:context="com.parse.app.ListAnnonce">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView android:id="@+id/listviewAnnonce"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:stackFromBottom="false"
            android:animateLayoutChanges="false"/>

        <ScrollView
            android:id="@+id/emptyList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
            <com.pnikosis.materialishprogress.ProgressWheel
                android:id="@+id/progress_wheel"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                wheel:matProg_barColor="#90454567"
                wheel:matProg_progressIndeterminate="true" />

            <TextView
                android:id="@+id/textNoAnnonce"
                android:text="Pas d'annonce !"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="7dp"
                android:textSize="18sp"
                android:textColor="@color/gris"
                android:gravity="center">

            </TextView>
            </LinearLayout>

        </ScrollView>

    </FrameLayout>


</android.support.v4.widget.SwipeRefreshLayout>

