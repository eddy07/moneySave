<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.parse.app.FeedBackActivity"
    android:id="@+id/setup_step1"
    android:layout_width="fill_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/frame"
            android:padding="20dp">
            <TextView
                android:id="@+id/textFeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/evernote_footer_text"
                android:textStyle="normal"
                android:textSize="18dp"
                android:padding="10dp"
                android:text="@string/text_send_feedback"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gris_background"
                android:layout_marginBottom="15dp"/>

            <LinearLayout
                android:id="@+id/formPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/feedback"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:maxHeight="100dp"
                    android:maxLines="3"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:hint="What do you think?"
                    android:textColorHint="@color/gris_background"
                    android:textStyle="normal"
                    android:textColor="@color/evernote_footer_text"/>

                <Button
                    android:id="@+id/sendBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send feedback"
                    android:layout_marginTop="15dp"
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_login"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
