                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:paddingBottom="15dp"
                android:paddingRight="15dp"
                android:layout_marginRight="20dp"
                android:contentDescription="@string/logo_tontine"
                android:scaleType="fitXY"
                />-->

            <TextView
                android:id="@+id/nom_tontine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8sp"
                android:typeface="normal"
                android:text=""
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:textSize="14dp"
                android:maxLines="3"
                android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
                android:textColor="@color/evernote_footer_text"/>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/description_tontine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nom_tontine"
                android:paddingLeft="10dp"
                android:gravity="left"
                android:typeface="serif"
                android:textStyle="italic"
                android:text=""
                android:layout_alignParentTop="true"
                android:maxLines="3"
                android:textColor="@color/gris"
                android:textAppearance="@android:style/TextAppearance.Small.Inverse" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/l3"
            android:layout_below="@+id/ligne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <!--<TextView
                android:id="@+id/creation_date"
