<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.parse.app.CreerAnnonceActivity"
    android:id="@+id/setup_step1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_blue_grey_800"
    android:orientation="vertical">
    <TextView
        android:id="@+id/wel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Envoyer une information ou une annonce !"
        android:layout_marginBottom="20dp"/>
        <com.parse.app.view.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp">
            <EditText
                android:id="@+id/titre"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:ems="10"
                android:gravity="top"
                android:hint="Titre"
                android:inputType="text"
                android:lines="5"
                android:maxLength="600"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingEnd="12dp"
                android:textColor="@color/white"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:textColorHint="@color/white"
                android:textSize="18sp"/>
        </com.parse.app.view.FloatLabeledEditText>
        <View
            android:layout_marginTop="-20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/material_blue_grey_800"/>
        <View
            android:layout_marginTop="-30dp"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"/>
        <com.parse.app.view.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="top"
                android:hint="Message"
                android:inputType="textMultiLine|textCapSentences"
                android:lines="5"
                android:maxLength="600"
                android:paddingBottom="11dp"
                android:paddingLeft="10dp"
                android:paddingEnd="12dp"
                android:textColor="@color/white"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:textColorHint="@color/white"
                android:textSize="18sp" />
        </com.parse.app.view.FloatLabeledEditText>
        <View
            android:layout_marginTop="-20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/material_blue_grey_800"/>
        <View
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/white"/>
        <ImageButton
            android:id="@+id/create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_good"
            android:layout_marginLeft="40dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_accept"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="40dp"/>

</LinearLayout>
