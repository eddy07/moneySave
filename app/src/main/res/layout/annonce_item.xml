<?xml version="1.0" encoding="utf-8"?>
<!-- the parent view - provides the gray listfragment background color -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:orientation="vertical"
    android:background="@color/material_blue_grey_800"
    android:gravity="top">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <TextView
                android:id="@+id/titre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:typeface="sans"
                android:maxLines="2"
                android:layout_marginRight="60dp"
                android:text="Titre"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:textColor="@color/white"/>

        <View
            android:layout_width="0.2dp"
            android:layout_height="55dp"
            android:layout_marginTop="-30dp"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:background="@color/white"/>
        <ImageButton
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/material_blue_grey_800"
            android:layout_gravity="right"
            android:layout_marginTop="-60dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/ic_action_cancel"/>
        <ImageButton
            android:id="@+id/exp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:background="@color/material_blue_grey_800"
            android:layout_gravity="right"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="-30dp"
            android:src="@drawable/ic_action_expand"/>
        <TextView
            android:id="@+id/hint"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="messagebfhffffffffffffffffffffffffffffffjfggjhfjhfhjdjfjfkf..."
            android:layout_marginTop="0dp"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:textColor="@color/gris_background"/>
        <TextView
            android:id="@+id/message"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="messagebfhfffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffjfggjhfjhfhjdjfjfkf..."
            android:layout_marginTop="0dp"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
